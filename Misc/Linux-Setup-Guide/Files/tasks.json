{
    "version": "2.0.0",
    "tasks": [
    {
            "label": "build-android",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--no-restore",
                "${workspaceFolder}/gip.iplus.client.avui.Android/gip.iplus.client.avui.Android.csproj",
                "-p:TargetFramework=net9.0-android",
                "-p:Configuration=Debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
			"label": "run-debug-android",
			"command": "dotnet",
			"type": "shell",
			"args": [
				"build",
				"--no-restore",
				"-t:Run",
				"${workspaceFolder}/gip.iplus.client.avui.Android/gip.iplus.client.avui.Android.csproj",
				"-p:TargetFramework=net9.0-android",
				"-p:Configuration=Debug",
				"-p:AndroidAttachDebugger=true",
				"-p:AndroidSdbHostPort=5555",
				"-p:AndroidSdbTargetPort=5555"
			],
			"problemMatcher": "$msCompile"
		},
                {
            "label": "Build Windows (wine)",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/gip.iplus.client/gip.iplus.client.csproj",
                "-r",
                "win-x64",
                "/p:Configuration=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Windows Release (wine)",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/gip.iplus.client/gip.iplus.client.csproj",
                "-r",
                "win-x64",
                "/p:Configuration=Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}
